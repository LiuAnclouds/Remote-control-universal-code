<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F99" >
        </View>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F99" >
        </View>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="对码"
            android:textColor="#f99" >
        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F99" >
        </View>

        <Button
            android:id="@+id/setupflow_get_areaid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="获取AreaId" />

        <Button
            android:id="@+id/setupflow_get_operators"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="获取运营商列表" />

        <Button
            android:id="@+id/setupflow_get_stb_remotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="获取运营商下所有的遥控器" />

        <Button
            android:id="@+id/setupflow_test_remotedata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="对码测试id为XXX的红外数据" />

        <Button
            android:id="@+id/setupflow_get_remotedata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="获取id为XXX的红外数据" />
        <Button
            android:id="@+id/setupflow_get_remotedata_allparse_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="对码测试id为XXX的空调全解红外数据" />
        <Button
            android:id="@+id/setupflow_get_remotedata_allparse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="获取id为XXX的空调全解红外数据" />


        <Button
            android:id="@+id/setupflow_get_iptv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="获取IpTV红外列表" />

        <Button
            android:id="@+id/setupflow_searchstb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="搜索关键字 华  机顶盒" />

        <Button
            android:id="@+id/setupflow_get_brandList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="获取某设备的品牌列表" />

        <Button
            android:id="@+id/setupflow_get_ir_by_brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="指定某设备某品牌下的所有的红外码的id" />

        <Button
            android:id="@+id/ir_openac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="打开空调面板" />

        <Button
            android:id="@+id/ir_openother"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="打开无状态空调和其他设备面板" />
    </LinearLayout>

</ScrollView>